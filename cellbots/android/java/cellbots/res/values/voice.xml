<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Voice control strings -->
    <string name="voice_loading">Hi! Please wait while I load...</string>
    <string name="voice_loaded">I\'m ready! Tap the microphone to speak.</string>
    <string name="voice_help_title">Voice Commands</string>
    <string name="voice_help_message">
        Tap the microphone to speak. Tap the X or say \"exit\" to stop listening.\n\n
        Available commands are:\n
        - move forward\n
        - move backward\n
        - turn left (or counter-clockwise)\n
        - turn right (or clockwise)\n
        - take picture\n
        - get location\n
        - stop
    </string>
    <string name="voice_listening">I\'m listening. What should I do?</string>
    <string name="voice_not_listening">I\'m no longer listening.</string>
    <string name="voice_recognized" formatted="false">I heard you say, \"%s\" and interpreted it as \"%s\"</string>
    <string name="voice_not_recognized">Sorry, I\'m not sure what you said.</string>
    <string name="voice_failed">Sorry, something went wrong: %s</string>
    <string name="voice_debug" formatted="false">Heard \"%s\" with confidence %d of %d</string>
    
