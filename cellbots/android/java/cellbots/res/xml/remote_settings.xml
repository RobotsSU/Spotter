<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/app_name">

        <CheckBoxPreference
                android:key="SHOW_SPLASH"
                android:title="Show Splash Screen"
                android:defaultValue="true"
                android:summaryOff="No splash for me, please"
                android:summaryOn="Yes, please show the splash screen"/>

        <CheckBoxPreference
                android:key="BLUE_HELP"
                android:title="Bluetooth Setup Help"
                android:defaultValue="true"
                android:summaryOff="No, don't check my bluetooth settings"
                android:summaryOn="Yes, help me get a bluetooth robot connected"/>

        <EditTextPreference
                android:key="CONTROLLER_ACCOUNT"
                android:title="Remote's GMail"
                android:hint="myrobotcontrol@gmail.com" />

        <EditTextPreference
                android:key="CONTROLLER_PASS"
                android:title="Remote's Password"
                android:hint="myNotSoSecretPassword1234" />

</PreferenceScreen>
