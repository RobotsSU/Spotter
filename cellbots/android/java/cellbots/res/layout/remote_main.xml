<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <ImageView android:id="@+id/remoteEyesView" android:layout_width="wrap_content"
    android:scaleType="fitStart" android:layout_height="wrap_content"
    android:src="@drawable/videoviewblank" />

  <View android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="@drawable/background" />


  <LinearLayout android:id="@+id/controls_layout"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:visibility="visible"
    android:gravity="bottom">

  </LinearLayout>
</FrameLayout>
