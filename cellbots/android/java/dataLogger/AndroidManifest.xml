<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.cellbots.logger" android:versionCode="1" android:versionName="1.0">

  <uses-permission android:name="android.permission.CAMERA" />
  <uses-permission android:name="android.permission.RECORD_AUDIO" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <application android:icon="@drawable/rec_button_pressed"
    android:label="@string/app_name" android:debuggable="true">

    <activity android:name=".LauncherActivity" android:label="@string/app_name"
      android:launchMode="singleTop" android:screenOrientation="portrait"
      android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
      android:windowSoftInputMode="stateUnspecified|adjustPan">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".LoggerActivity" android:label="@string/app_name"
      android:launchMode="singleTop" android:screenOrientation="portrait"
      android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    </activity>


    <!--
      Comment out the above two activities and uncomment the activity below this
      to revert back to the simpler mode where it is always recording video out
      of the front camera
