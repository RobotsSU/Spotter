<?xml version="1.0" encoding="utf-8" ?>

  <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">


  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Servo Calibration"
    android:textSize="10pt"/>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/TextViewInstructions"
    android:text="Turn on the PWM signal and slide the sliders until the servos come to a complete stop."></TextView>


    <SeekBar
      android:id="@+id/LeftServo"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:progress="50"
      android:layout_marginLeft="4px"
      android:layout_marginRight="4px">
    </SeekBar>
    <TextView
      android:text="@+id/LeftServoValue"
      android:id="@+id/LeftServoValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></TextView>
    <SeekBar
      android:id="@+id/LeftServo2"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:progress="50"
      android:layout_marginLeft="4px"
      android:layout_marginRight="4px"></SeekBar>
    <TextView
      android:text="@+id/LeftServoValue2"
      android:id="@+id/LeftServoValue2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></TextView>
    <SeekBar
      android:id="@+id/RightServo"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:progress="50"
      android:layout_marginLeft="4px"
      android:layout_marginRight="4px"></SeekBar>
    <TextView
      android:text="@+id/RightServoValue"
      android:id="@+id/RightServoValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></TextView>
    <SeekBar
      android:id="@+id/RightServo2"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:progress="50"
      android:layout_marginLeft="4px"
      android:layout_marginRight="4px"></SeekBar>
    <TextView
      android:text="@+id/RightServoValue2"
      android:id="@+id/RightServoValue2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></TextView>


  <SeekBar
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginLeft="4px"
    android:layout_marginRight="4px"
    android:progress="50"
    android:id="@+id/LROffset"></SeekBar>
  <TextView
    android:text="@+id/TextView02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/WheelOffestValue"></TextView>

  <LinearLayout
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="4px">
    
  <CheckBox
    android:text="Rev1"
    android:id="@+id/RevServo1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  </CheckBox>
  
  
  <CheckBox
    android:text="Rev3"
    android:id="@+id/RevServo3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  </CheckBox>
    
    


  </LinearLayout>

  <TextView
    android:text="If you are not getting any response from the servo, try adjusting the volume control on the side of your phone."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/TextViewHelp"></TextView>


</LinearLayout>
</ScrollView>